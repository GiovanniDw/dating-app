<%- include ('../partials/head') %>




<header>
    <nav class="navbar is-fixed-top is-light">
        <div class="navbar-menu">
            <div class="navbar-start">
                <div class="navbar-link is-active">
                    <a class="navbar-item" href="/profile">

                        <p class="is-size-6">Profile</p>
                    </a>
                </div>
            </div>
        </div>
    </nav>



</header>
<section class=section>
    <div class=container>
        <% if (typeof user == 'object' && user) { %>



        <div class=card>
            <div class="card-content">
                <div class="media">
                    <div class="media-left">
                        <figure class="image is-128x128">
                            <img class=is-rounded src="/uploads/<%= user.picture %> ">
                        </figure>
                    </div>
                    <div class="media-content">
                        <h2 class=title><%= user.name %></h2>

                    </div>
                </div>

                <div class="content">
                    <%- include ('../partials/my-list') %>
                    <h3 class="title is-4">Platforms</h3>

                    <div class="tags are-medium">
                        <% for (var i = 0; i < user.platforms.length; i++) { %>
                        <span class="tag"><%= user.platforms[i] %></span>
                        <% } %>
                    </div>

                    <h3 class="title is-4">Genres</h3>


                    <div class="tags are-medium">
                        <% for (var i = 0; i < user.genres.length; i++) { %>
                        <span class="tag"><%= user.genres[i] %></span>
                        <% } %>
                    </div>


                    <h3 class="title is-4">About</h3>
                    <p class=""> <%= user.about %> </p>


                </div>
            </div>



            <a class='button is-primary' href="/logout">Logout</a>
            <% } else { %>
            <h2>Hi Nobody!</h2>
            <% } %>
        </div>
</section>



<%- include ('../partials/tail') %>