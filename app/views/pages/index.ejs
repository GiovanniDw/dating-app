<%- include ('../partials/head') %>



<header>
  <nav class="navbar is-fixed-top">
    <div class="navbar-brand">
      <a class="navbar-item is-expanded has-text-centered" href="/profile">

        <p class="is-size-3">Discover</p>
      </a>
    </div>
  </nav>



</header>

<% if (typeof user == 'object' && user) { %>





<% for (var i = 0; i < users.length; i++) { %>
<section class="section">
  <div class="container">


    <div class="card">
      <div class="card-content">
        <div class="media">
          <div class="media-left">
            <figure class="image is-128x128">
              <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
            </figure>
          </div>
          <div class="media-content">
            <p class="title is-4"> <%= users[i].name %> </p>

          </div>
        </div>
        <div class="content">
          <h3 class="title is-4">Platforms</h3>

          <div class="tags are-medium">
            <% for (var j = 0; j < users[i].platforms.length; j++) { %>
            <span class="tag"><%= users[i].platforms[j] %></span>
            <% } %>
          </div>

          <h3 class="title is-4">Genres</h3>


          <div class="tags are-medium">
            <% for (var j = 0; j < users[i].genres.length; j++) { %>
            <span class="tag"><%= users[i].genres[j] %></span>
            <% } %>
          </div>


          <h3 class="title is-4">About</h3>
          <p class=""> <%= users[i].about %> </p>

        </div>
      </div>
    </div>
</section>
<% } %>


<% } else { %>
<h2>Welcome!</h2>
<% } %>

<%- include ('../partials/tail') %>




</div>
</div>